# Shopify App Credentials (from partners.shopify.com)
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
SHOPIFY_SCOPES=read_themes,read_products,read_orders

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
SHOPIFY_APP_URL=http://localhost:3000

# Database (Neon)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Redis Cache (Upstash)
# Get your credentials from https://console.upstash.com
UPSTASH_REDIS_URL=https://xxx.upstash.io
UPSTASH_REDIS_TOKEN=xxx

# Stripe (optional for MVP - currently not used)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Session Secret
SESSION_SECRET=generate-a-random-32-char-string

# Google PageSpeed API
PAGESPEED_API_KEY=your_google_api_key

# Error Monitoring (Sentry)
# Get your DSN from https://sentry.io
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Security Settings
# Set to 'true' in production
SECURE_COOKIES=false
# Rate limiting (optional overrides)
RATE_LIMIT_ANALYSES_PER_DAY=10
RATE_LIMIT_API_PER_MINUTE=60

# Cron Jobs
# Generate a secure random string for authenticating cron endpoints
CRON_SECRET=generate-a-random-32-char-string
